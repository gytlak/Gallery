<!DOCTYPE html>
<html>
    <head>
    {% block head %}
        <meta charset="UTF-8" />
        <title>Gallery - {% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('css/magnific.css') }}" rel="stylesheet">
            <link href="{{ asset('css/gallery.css') }}" rel="stylesheet">
            <link href="{{ asset('css/bootstrap-responsive.min.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% endblock %}
    </head>

    <body>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="{{ path('nfqakademija_gallery_homepage') }}">Gallery</a>
                    <div class="nav-collapse collapse">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <p class="navbar-text pull-right">
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                        </p>
                        <ul class="nav">
                            <li><a href="{{ path('nfqakademija_album_form') }}">New album</a></li>
                            <li><a href="{{ path('nfqakademija_photo_form') }}">New photo</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                        </ul>
                        {% else %}
                        <ul class="nav">
                            <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                        </ul>
                        {% endif %}
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <section class="container">{% block content %}{% endblock %}</section>

        <hr>

        <footer class="container">
            {% block footer %}
                &copy; Copyright 2013 by Gytis Lakaviƒçius.
            {% endblock %}
        </footer>

        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('js/jquery-ui.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/magnific.js') }}"></script>
            <script src="{{ asset('js/nfq.photoPopup.js') }}"></script>
            <script src="{{ asset('js/nfq.deleteButton.js') }}"></script>
        {% endblock %}
    </body>
</html>