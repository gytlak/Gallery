<!DOCTYPE html>
<html data-wf-site="54686dc4747cc64d0ff6c7fb" data-wf-page="54686dc4747cc64d0ff6c7fd">
<head>
    {% block head %}
    <meta charset="utf-8">
    <title>Gallery - {% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
        <link href="{{ asset('css/magnific.css') }}" rel="stylesheet">
        <link href="{{ asset('css/normalize.css') }}" rel="stylesheet">
        <link href="{{ asset('css/webflow.css') }}" rel="stylesheet">
        <link href="{{ asset('css/ktugallery.webflow.css') }}" rel="stylesheet">
        <link href="{{ asset('css/gallery.css') }}" rel="stylesheet">
    {% endblock %}
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js"></script>
    <script>
        WebFont.load({
            google: {
                families: ["Montserrat:400,700","Varela Round:400","Varela:400"]
            }
        });
    </script>
    <script type="text/javascript" src="{{ asset('js/modernizr.js') }}"></script>
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/webclip-gallio.png') }}">
    <link rel="apple-touch-icon" href="{{ asset('images/webclip-gallio.png') }}">
    {% endblock %}
</head>
<body>
<header class="nav-bar">
    <div class="w-container">
        <div class="w-row">
            <div class="w-col w-col-4 brand-column">
                <a href="{{ path('ktu_gallery_homepage') }}">
                    <img class="logo" src="{{ asset('images/1-logo.png') }}" width="41" alt="Gallery">
                    <div class="company">Gallery</div>
                </a>
            </div>
            <nav class="w-col w-col-8 nav-column">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a class="nav-link" href="{{ path('ktu_album_form') }}">NEW ALBUM</a>
                    <a class="nav-link" href="{{ path('ktu_photo_form') }}">NEW PHOTO</a>
                    <a class="nav-link" href="{{ path('ktu_gallery_user_albums') }}">MY ALBUMS</a>
                    <a class="nav-link" href="{{ path('ktu_gallery_search') }}">SEARCH</a>
                    <a class="nav-link sign-up" href="{{ path('fos_user_security_logout') }}" target="_self">LOG OUT</a>
                {% else %}
                    <a class="nav-link" href="{{ path('ktu_gallery_search') }}">SEARCH</a>
                    <a class="nav-link" href="{{ path('fos_user_registration_register') }}">SIGN UP</a>
                    <a class="nav-link sign-up" href="{{ path('fos_user_security_login') }}" target="_self">SIGN IN</a>
                {% endif %}
            </nav>
        </div>
    </div>
</header>
    {% block header %}{% endblock %}
<div class="section centered">
    {% block content %}{% endblock %}
</div>
<footer class="section footer">
    <div class="w-container">
        <div class="w-row">
            <div class="w-col w-col-6">
                <div class="footer-text">Gallery&nbsp;© Copyright 2015 Gytis Lakavičius, KTU</div>
            </div>
            <div class="w-col w-col-6 right-footer-col">
                <a href="http://validator.w3.org/check?uri=http%3A%2F%2Fgallery.gytis.me%2F">
                    <img style="border:0;width:88px;height:31px"
                         src="{{ asset('images/html5-logo.png') }}"
                         alt="Valid HTML!" />
                </a>
                <a href="http://jigsaw.w3.org/css-validator/check/referer">
                    <img style="border:0;width:88px;height:31px"
                         src="{{ asset('images/vcss-blue.gif') }}"
                         alt="Valid CSS!" />
                </a>
                <a class="w-inline-block social-icon" href="mailto:gytis@gytis.me?subject=Hello">
                    <img src="{{ asset('images/14-social-email.png') }}" width="20" alt="Contact us">
                </a>
            </div>
        </div>
    </div>
</footer>
{% block javascripts %}
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.js') }}"></script>
    <script src="{{ asset('js/webflow.js') }}"></script>
    <script src="{{ asset('js/magnific.js') }}"></script>
    <script src="{{ asset('js/ktu.photoPopup.js') }}"></script>
    <script src="{{ asset('js/ktu.deleteButton.js') }}"></script>
    <script src="{{ asset('js/ktu.addTag.js') }}"></script>
    <!--[if lte IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
{% endblock %}
</body>
</html>
